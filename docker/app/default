server {
    listen 80;
    listen 443 ssl;

    server_name _;

    client_max_body_size 10M;

    # ssl_certificate /etc/letsencrypt/live/mouat.bpprojects.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/mouat.bpprojects.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    gzip            on;
    gzip_types      text/plain application/xml text/css application/javascript;
    gzip_min_length 1000;

    # proxy for frontend
    location / {
        expires $expires;

        proxy_redirect                      off;
        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  $scheme;
        proxy_read_timeout          1m;
        proxy_connect_timeout       1m;
        proxy_pass                          http://node:3000; # set the adress of the Node.js instance here
    }

    # proxy for api
    location /api {
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header Host               $host;
        proxy_set_header X-NginX-Proxy      true;

        rewrite ^/?(.*) /$1 break;

        # laravel server url
        proxy_pass                          http://express:8080;
        proxy_redirect                      off;
    }
}
